OPENROUTER_API_KEY=changeme
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Embeddings (used for memory vector store)
EMBEDDING_API_KEY=openai-api-key
EMBEDDING_BASE_URL=https://api.openai.com/v1
EMBEDDING_MODEL=text-embedding-3-small

# Comma-separated model lists per category (first entry is primary)
RESPONSE_MODELS=gpt-4o-mini
INTENT_MODELS=gpt-4o-mini
AGGREGATION_MODELS=gpt-4o-mini
UTILITY_MODELS=kwaipilot/kat-code-pro:free
# Optional legacy fallback if the category lists are unset
# OPENROUTER_MODEL=gpt-4o-mini

REDIS_URL=redis://localhost:6379
# Admin bearer for token management (used by the admin UI)
ADMIN_API_KEY=super-secret-admin-token

# Memory storage
MEMORY_INDEX_NAME=bernard_memories
MEMORY_KEY_PREFIX=bernard:memories
MEMORY_NAMESPACE=bernard:memories

# OAuth (Code + PKCE)
OAUTH_AUTH_URL=https://auth.example.com/oauth/authorize
OAUTH_TOKEN_URL=https://auth.example.com/oauth/token
OAUTH_USERINFO_URL=https://auth.example.com/oauth/userinfo
OAUTH_CLIENT_ID=bernard-admin
OAUTH_CLIENT_SECRET=replace-me
OAUTH_REDIRECT_URI=http://localhost:3000/api/auth/callback
OAUTH_SCOPES=openid profile email
# Session lifetime in seconds (default: 604800 = 7 days)
SESSION_TTL_SECONDS=604800

# Google OAuth (set provider-specific client id/secret)
OAUTH_GOOGLE_AUTH_URL=https://accounts.google.com/o/oauth2/v2/auth
OAUTH_GOOGLE_TOKEN_URL=https://oauth2.googleapis.com/token
OAUTH_GOOGLE_USERINFO_URL=https://openidconnect.googleapis.com/v1/userinfo
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback
OAUTH_GOOGLE_SCOPES=openid profile email
OAUTH_GOOGLE_CLIENT_ID=google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=google-client-secret

# GitHub OAuth (set provider-specific client id/secret)
OAUTH_GITHUB_AUTH_URL=https://github.com/login/oauth/authorize
OAUTH_GITHUB_TOKEN_URL=https://github.com/login/oauth/access_token
OAUTH_GITHUB_USERINFO_URL=https://api.github.com/user
OAUTH_GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback
OAUTH_GITHUB_SCOPES=read:user user:email
OAUTH_GITHUB_CLIENT_ID=github-client-id
OAUTH_GITHUB_CLIENT_SECRET=github-client-secret

# Web search (e.g., Brave Search API)
SEARCH_API_KEY=brave-api-key
SEARCH_API_URL=https://api.search.brave.com/res/v1/web/search

# Geocoding (OpenStreetMap Nominatim)
NOMINATIM_URL=https://nominatim.openstreetmap.org/search
NOMINATIM_USER_AGENT=your-app-name (+https://example.com/contact)
# Optional contact and referrer helpers for Nominatim
# NOMINATIM_EMAIL=ops@example.com
# NOMINATIM_REFERER=https://example.com

# Weather (OpenWeather)
WEATHER_API_KEY=openweather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5/weather



