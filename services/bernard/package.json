{
  "name": "bernard",
  "version": "0.1.0",
  "description": "bernard agent API with LangGraph tools and token auth",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "vite build",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "type-check:src": "tsc --noEmit --project tsconfig.check.json",
    "tests": "vitest run",
    "tests:watch": "vitest --watch",
    "tests:coverage": "vitest run --coverage"
  },
  "keywords": [
    "langgraph",
    "nextjs",
    "openai",
    "openrouter",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/core": "^1.1.8",
    "@langchain/langgraph": "^1.0.7",
    "@langchain/langgraph-checkpoint-redis": "^1.0.1",
    "@langchain/ollama": "^1.1.0",
    "@langchain/openai": "^1.2.0",
    "@langchain/redis": "^1.0.1",
    "@mozilla/readability": "^0.5.0",
    "bullmq": "^5.66.0",
    "dotenv": "^17.2.3",
    "home-assistant-js-websocket": "^9.6.0",
    "ioredis": "^5.8.2",
    "js-tiktoken": "^1.0.15",
    "jsdom": "^27.3.0",
    "jsonrepair": "^3.13.1",
    "langchain": "^1.2.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "redis": "^4.7.0",
    "wikipedia": "^2.4.2",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^9.39.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.16.0",
    "vite": "^6.0.11",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^2.1.4"
  }
}
