# OAuth Configuration for GitHub
# Get these values from https://github.com/settings/developers
OAUTH_GITHUB_AUTH_URL=https://github.com/login/oauth/authorize
OAUTH_GITHUB_TOKEN_URL=https://github.com/login/oauth/access_token
OAUTH_GITHUB_USERINFO_URL=https://api.github.com/user
OAUTH_GITHUB_REDIRECT_URI=http://localhost:3456/auth/github/callback
OAUTH_GITHUB_SCOPES=read:user user:email
OAUTH_GITHUB_CLIENT_ID=your-github-oauth-app-client-id
OAUTH_GITHUB_CLIENT_SECRET=your-github-oauth-app-client-secret

# Admin API Key (for admin access without OAuth)
ADMIN_API_KEY=super-secret-admin-token

# Session configuration (7 days)
SESSION_TTL_SECONDS=604800

# Server configuration
PORT=3456
HOST=0.0.0.0

# Redis configuration
REDIS_URL=redis://localhost:6379

# Backend service URLs (for proxying)
API_PORT=8800
UI_PORT=8810
BERNARD_PORT=8850
VLLM_PORT=8860
WHISPER_PORT=8870
KOKORO_PORT=8880

TZ=America/Chicago

# Plex Media Server
PLEX_URL=http://localhost:32400
PLEX_TOKEN=your-plex-token
